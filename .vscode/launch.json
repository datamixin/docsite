{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "serve"
            ],
            "localRoot": "${workspaceFolder}/src/main/website",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "internalConsoleOptions": "neverOpen",
            "console": "externalTerminal"
        }
    ]
}